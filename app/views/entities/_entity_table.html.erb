<table class="table table-responsive">
  <thead>
    <th class="text-center">Name</th>
    <th class="text-center">Type</th>
    <th class="text-center">Balance</th>
    <th class="text-center">Options</th>
  </thead>
  <tbody>
    <% @entities.each do |entity| %>
    <tr>
      <td>
        <p><%= link_to entity.name, entity_url(entity)%></p>
      </td>
      <td>
        <p><%= entity.type %></p>
      </td>
      <td>
        <p><%= entity.account.balance %></p>
      </td>
      <td>
        <p>
          <%= link_to 'Edit', edit_entity_url(entity), class: 'btn btn-primary' %>
          <%= link_to 'Delete', entity_url(entity), method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %>
        </p>
      </td>
    </tr>
    <% end %>
  </tbody>

</table>